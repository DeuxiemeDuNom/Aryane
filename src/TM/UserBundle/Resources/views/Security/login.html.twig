{# /src/TM/UserBundle/Resources/views/Security/login.html.twig #}

{% extends "TMUserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} | Connexion{% endblock title %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	
<div class="product-big-title-area under">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Connexion</h2>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="maincontent-area">
    <br><br><br>
    <div class="container">
    	<div class="row">
    		<div class="col-md-4 col-md-offset-4">
    			
    		
    {# ==================================================== CORPS DE LA PAGE =================================================== #}
            

		{% if error %}
		    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path("fos_user_security_check") }}" method="post">
			<div class="form-group" id="fos_user_registration_form">
			    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
			    
			    <div class="form-group">
			        <input class="form-control" placeholder="{{ 'security.login.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
			    </div>
			    <div class="form-group">
			        <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
			    </div>
			    <div class="form-group">
			        <label>
			            {{ 'security.login.remember_me'|trans }} <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			        </label>
			    </div>

			    <input class="btn btn-lg btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
			</div>
		</form>

		<br>
		<hr>
		<br>
		<h3 class="dyna info">Comment? Pas encore de compte? Remédions à ça... : 
		    <u><i><a href="{{path('fos_user_registration_register')}}">Par ici!</a></i></u>
		</h3>




            


    {# ================================================= FIN DU CORPS DE LA PAGE ================================================ #}
    		</div>
		</div>
    </div>
</div>

<div class="product-widget-area">
    <div class="zigzag-bottom"></div>
</div>


{% endblock fos_user_content %}
